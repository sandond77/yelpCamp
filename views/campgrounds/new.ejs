<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Campground Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="invalid-feedback">Needs a Title!</div>
                </div> 
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="invalid-feedback">Please Add a Location!</div>
                </div>
                <div class="mb-3">               
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="dollarsign">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                        <div class="invalid-feedback">Missing Price!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required> </textarea>
                    <div class="invalid-feedback">Needs a Description!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Add Campground</button>
                </div> 
                <div class="mb-3">
                    <label for="formFile" class="image">Add Images</label>
                    <input class="form-control" type="file" id="campground[image]" name="image" multiple>
                </div>
            </form>
            <footer>
                <a href="/campgrounds">Return To All Campgrounds</a>
            </footer>
        </div>
    </div>